        <meta property="fb:app_id" content="123456787">
        <meta property="og:url" content="https://campusweekly.herokuapp.com/story/?id={{this.post_id}}">
        <meta property="og:type" content="website">
        <meta property="og:title" content="{{this.post_title}}">
        <meta property="og:image" content="{{this.image_file}}">
        <meta property="og:image:alt" content="Article Image">
        <meta property="og:description" content="{{this.paragraph}}">
        <meta property="og:site_name" content="Campus Weekly">
        <meta property="og:locale" content="en_US">
        <meta property="article:author" content="{{this.surname}}  {{this.firstname}}">
